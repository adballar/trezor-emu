#!/usr/bin/python
import time
import bitkey

bitkey = bitkey.Bitkey()
bitkey.init()

bitkey.oledClear()
bitkey.oledDrawString(0, 11, "1BRMLAB7nryYgFGrG8x9S", Font5x8)
bitkey.oledDrawString(0, 21, "12381.87431928 B", Font7x8)
bitkey.oledDrawString(0, 56, "Confirm        Cancel", Font5x8)
bitkey.oledInvert(0, 20, 127, 28)
bitkey.oledRefresh()

while True:
    b = bitkey.buttonsRead()
    print 'yes:', b[1], 'no:', b[0]
    time.sleep(0.1)
